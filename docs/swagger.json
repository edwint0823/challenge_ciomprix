{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentación de la API de challenge Ciomprix",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "users",
      "description": "Operaciones relacionadas con los usuarios"
    },
    {
      "name": "subjects",
      "description": "Operaciones relacionadas con las asignaturas"
    }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Registro de nuevos usuarios",
        "description": "Permite registrar nuevos usuarios en el sistema.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "first_name": {
                    "type": "string",
                    "description": "El nombre del usuario."
                  },
                  "last_name": {
                    "type": "string",
                    "description": "El apellido del usuario."
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "La dirección de correo electrónico del usuario."
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "La contraseña del usuario."
                  },
                  "is_admin": {
                    "type": "boolean",
                    "description": "Indica si el usuario es administrador o no."
                  },
                  "is_student": {
                    "type": "boolean",
                    "description": "Indica si el usuario es estudiante o no."
                  },
                  "dni": {
                    "type": "string",
                    "example": 123456789,
                    "description": "El número de identificación del usuario (DNI)."
                  },
                  "phone_number": {
                    "type": "string",
                    "example": 3012345678,
                    "description": "El número de teléfono del usuario."
                  },
                  "birth_date": {
                    "type": "string",
                    "format": "date",
                    "description": "La fecha de nacimiento del usuario en el formato YYYY-MM-DD."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario registrado exitosamente."
          },
          "400": {
            "description": "Error en la solicitud, revisa los datos enviados."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/api/users/login": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Iniciar sesión",
        "description": "Permite iniciar sesión a los usuarios registrados.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "La dirección de correo electrónico del usuario."
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "La contraseña del usuario."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Se ha iniciado sesión exitosamente."
          },
          "400": {
            "description": "Error en la solicitud, revisa los datos enviados."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/api/subjects/link-student-to-subject": {
      "post": {
        "tags": [
          "subjects"
        ],
        "summary": "Vincular estudiante",
        "description": "Vincular un estudiante a una asignatura",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student_id": {
                    "type": "number",
                    "description": "Id del estudiante a vincular."
                  },
                  "subjects_id": {
                    "type": "array",
                    "example": [
                      1,
                      2,
                      3
                    ],
                    "description": "Ids de las asignaturas "
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Estudiante vinculado exitosamente."
          },
          "400": {
            "description": "Error en la solicitud, revisa los datos enviados."
          },
          "401": {
            "description": "Error de autenticación , verificar token."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/api/subjects/create": {
      "post": {
        "tags": [
          "subjects"
        ],
        "summary": "Crear asignatura",
        "description": "Crear una asignatura",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Nombre de la asignatura."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Asignatura creada exitosamente."
          },
          "400": {
            "description": "Error en la solicitud, revisa los datos enviados."
          },
          "401": {
            "description": "Error de autenticación , verificar token."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    }
  }
}